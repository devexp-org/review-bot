{
  "name": "devexp",
  "version": "0.1.0",
  "description": "DevExp",
  "main": "app.js",
  "scripts": {
    "lint": "eslint . || true",
    "test": "./scripts/run mocha -r ./tests/setup.js -R spec app/**/__tests__/**/*.test.js",
    "test:only": "npm run mongo:dev | ./scripts/run mocha -w -r ./tests/setup.js -R spec app/**/__tests__/**/*.test.js",
    "cover": "npm run mongo:dev | ./scripts/run babel-istanbul cover ./node_modules/.bin/_mocha --babel-stage 0 --include-all-sources -x '**/__tests__/**' -x 'public/app.js' -x 'app/config/**/**' --report text --report html -- -r ./tests/setup.js -R dot app/**/__tests__/**/*.test.js",
    "mongo:dev": "mongod --dbpath ./data",
    "mongo:deamon:start": "mongod --config ./scripts/mongod.conf",
    "mongo:deamon:stop": "kill -TERM $(cat ./data/mongod.lock)",
    "webpack:dev": "WEBPACK_DEV=1 ./scripts/run webpack-dev-server --config ./.webpack/webpack.js --hot",
    "serve:dev": "./scripts/run nodemon app.js -e js,html --ignore __test__ --ignore public/ --ignore app/client/ --ignore node_modules",
    "dev": "WEBPACK_DEV=1 ./node_modules/.bin/parallelshell 'npm run webpack:dev' 'npm run mongo:dev' 'npm run serve:dev'",
    "dev:nowp": "./node_modules/.bin/parallelshell 'npm run mongo:dev' 'npm run serve:dev'",
    "dev:tdd": "npm run dev -- 'npm test -- -w'",
    "build": "./scripts/run webpack --config ./.webpack/webpack.js",
    "forever:start": "NODE_ENV=production ./scripts/run forever start app.js",
    "forever:stop": "NODE_ENV=production ./scripts/run forever stop app.js",
    "forever:restart": "NODE_ENV=production ./scripts/run forever restart app.js",
    "forever:logs": "./scripts/run forever logs app.js"
  },
  "author": "Stanislav Sysoev <d4rkr00t@gmail.com> (http://sysoev.org)",
  "license": "MIT",
  "dependencies": {
    "babel": "^5.6.23",
    "badgs": "^0.5.0",
    "body-parser": "^1.13.2",
    "es6-promise": "^2.3.0",
    "express": "^4.13.1",
    "github": "^0.2.4",
    "lodash": "^3.10.0",
    "moment": "^2.10.3",
    "mongoose": "^4.0.8",
    "node-xmpp-client": "^1.0.0-alpha23",
    "response-time": "^2.3.1",
    "terror": "^1.3.0",
    "winston": "^1.0.1"
  },
  "devDependencies": {
    "alt": "^0.17.1",
    "autoprefixer-loader": "^2.0.0",
    "babel-eslint": "^3.1.23",
    "babel-istanbul": "^0.2.10",
    "babel-loader": "^5.3.2",
    "chai": "^3.2.0",
    "chai-as-promised": "^5.1.0",
    "css-loader": "0.14.5",
    "eslint": "^0.24.1",
    "eslint-plugin-react": "^2.7.1",
    "extract-text-webpack-plugin": "^0.8.2",
    "mocha": "^2.2.5",
    "node-libs-browser": "^0.5.2",
    "node-sass": "^3.2.0",
    "nodemon": "^1.3.7",
    "parallelshell": "^1.2.0",
    "proxyquire": "^1.6.0",
    "react": "^0.13.3",
    "react-hot-loader": "^1.2.8",
    "react-router": "^0.13.3",
    "react-timeago": "2.2.1",
    "sass-loader": "^1.0.2",
    "sinon": "^1.15.4",
    "style-loader": "^0.12.3",
    "webpack": "^1.10.1",
    "webpack-dev-server": "^1.10.1",
    "whatwg-fetch": "^0.9.0"
  }
}
