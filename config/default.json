{

  "startup_timeout": 10000,

  "shutdown_timeout": 5000,

  "services": {

    "queue": {
      "path": "./src/services/queue"
    },

    "events": {
      "path": "./src/services/events"
    },

    "logger": {
      "path": "./src/services/logger",
      "options": {
        "formatters": {
          "default": {
            "format": "[%(date)s] %(name)s %(levelname)s: %(message)s",
            "datefmt": "%Y-%m-%dT%H:%M:%S.%L%z",
            "colorize": true
          }
        },
        "handlers": {
          "terminal": {
            "class": "intel/handlers/console",
            "level": "VERBOSE",
            "formatter": "default"
          }
        },
        "loggers": {
          "root": {
            "level": "INFO",
            "handlers": ["terminal"],
            "exitOnError": false,
            "handleExceptions": true
          }
        }
      }
    },

    "github": {
      "path": "./src/services/github",
      "options": {
        "host": "api.github.com",
        "debug": false,
        "version": "3.0.0",
        "timeout": 5000,
        "protocol": "https",
        "headers": {
          "user-agent": "DevExp/2.0.0"
        }
      },
      "dependencies": []
    },

    "http": {
      "path": "./src/services/http",
      "options": {
        "port": "8080",
        "routes": {
          "/team": "http-routes-team",
          "/github": "http-routes-github",
          "/badges": "http-routes-badges",
          "/badges-updater": "http-routes-badges-updater",
          "#comment:/staff": "http-routes-staff",
          "#comment:/jabber": "http-routes-jabber"
        }
      },
      "dependencies": [
        "logger",
        "http-routes-team",
        "http-routes-github",
        "http-routes-badges",
        "http-routes-badges-updater",
        "#comment:http-routes-staff",
        "#comment:http-routes-jabber"
      ]
    },

    "#include:http-routes": "./default-http-routes.json",

    "mongoose": {
      "path": "./src/services/mongoose",
      "options": {
        "host": "mongodb://localhost/devexp"
      },
      "dependencies": ["logger"]
    },

    "model": {
      "path": "./src/services/model",
      "options": {
        "addons": {
          "pull_request": [
            "pull-request-github-addon",
            "pull-request-review-addon",
            "pull-request-complexity-addon"
          ]
        }
      },
      "dependencies": [
        "mongoose",
        "pull-request-github-addon",
        "pull-request-review-addon",
        "pull-request-complexity-addon"
      ]
    },

    "team-dispatcher": {
      "path": "./src/services/team-dispatcher",
      "options": {
        "routes": [
          { "team-devexp-github": ["*/devexp"] }
        ]
      },
      "dependencies": [
        "team-devexp-github"
      ]
    },

    "#include:teams": "./default-teams.json",

    "pull-request-model": {
      "path": "./src/services/pull-request-model",
      "dependencies": [
        "model"
      ]
    },

    "pull-request-github": {
      "path": "./src/services/pull-request-github-delayed",
      "options": {
        "separator": {
          "top": "\n<hr><div id=\"devexp-content-start\"></div>",
          "bottom": "<div id=\"devexp-content-end\"></div>"
        }
      },
      "dependencies": [
        "github"
      ]
    },

    "pull-request-github-addon": {
      "path": "./src/services/pull-request-github/addon"
    },

    "pull-request-review": {
      "path": "./src/services/pull-request-review",
      "dependencies": [
        "events",
        "logger"
      ]
    },

    "pull-request-review-addon": {
      "path": "./src/services/pull-request-review/addon"
    },

    "review": {
      "path": "./src/services/review",
      "options": {
        "approveCount": 2,
        "totalReviewers": 2,
        "steps": [
          "remove-author",
          "remove-already-reviewers",
          "ignore",
          "random",
          "prefered",
          "commiters",
          "project-config",
          "load"
        ],
        "stepsOptions": {
          "commiters": {
            "max": 4,
            "since": [4, "month"],
            "filesToCheck": 5,
            "commitsCount": 10
          },
          "load": { "max": 5 },
          "random": { "max": 5 }
        }
      },
      "dependencies": [
        "logger",
        "team-dispatcher",
        "review-step-commiters",
        "review-step-ignore",
        "review-step-random",
        "review-step-load",
        "review-step-remove-already-reviewers",
        "review-step-remove-author",
        "review-step-project-config",
        "review-step-prefered"
      ]
    },

    "#include:review-steps": "./default-review-steps.json",

    "command": {
      "path": "./src/services/command",
      "options": {
        "events": ["github:issue_comment"],
        "#include:command-regexp": "./default-command-regexp.json"
      },
      "dependencies": [
        "queue",
        "events",
        "logger",
        "pull-request-model",
        "command-start",
        "command-stop",
        "command-ping",
        "command-ok",
        "command-not-ok",
        "command-busy",
        "command-replace",
        "command-change",
        "command-add",
        "command-remove",
        "command-help"
      ]
    },

    "#include:command": "./default-command.json",

    "notification": {
      "path": "./src/services/notification",
      "dependencies": [
        "model"
      ]
    },

    "#include:notification": "./default-notification.json",

    "scheduler": {
      "path": "./src/services/scheduler",
      "options": {
        "days": 1
      },
      "dependencies": [
        "events",
        "logger",
        "pull-request-model"
      ]
    },

    "#include:badges": "./default-badges.json",

    "#include:plugins": "./default-plugins.json"

  }

}
